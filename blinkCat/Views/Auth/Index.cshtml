@model UserViewModel
<div class="container-fluid d-flex align-items-center justify-content-center" style="min-height: 100vh;" >
    <div class="row text-white">
        <div style="font-family:'Segoe UI'" class="text-center">
            <h1>Welcome</h1>
        </div>
        <div class="form-group bg-white text-dark rounded-3 p-5 m-2">
            <form method="post">
                <h5 class="mb-2 text-black-50">@Html.DisplayNameFor(x => x.Email)</h5>
                @Html.TextBoxFor(x => x.Email, new{Placeholder="just type your email...", @class="form-control"})
                <h5 class="mb-2 text-black-50">@Html.DisplayNameFor(x => x.Password)</h5>
                @Html.PasswordFor(x => x.Password, new{Placeholder="***", type="password", @class="form-control"})
                <button class="btn btn-primary mt-3 p-2" type="submit">Go!</button>
            </form>
            <div class="row text-end">
                <p>i am new!</p>
            </div>
        </div>
    </div>
</div>
